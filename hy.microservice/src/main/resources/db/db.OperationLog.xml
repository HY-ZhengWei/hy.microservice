<?xml version="1.0" encoding="UTF-8"?>

<config>

    <import name="sqls"            class="java.util.ArrayList" />
    <import name="sqlGroup"        class="org.hy.common.xml.plugins.XSQLGroup" />
    <import name="sql"             class="org.hy.common.xml.XSQL" />



    <!-- 系统操作日志的相关SQL -->
    <sqls>
    
        <sql id="XSQL_Common_OperationLog_Insert"> 
        
            <dataSourceGroup ref="DSG_MS_Common" />
            
            <content>
                <![CDATA[
                INSERT  INTO TOperationLog:logName
                       (
                         id
                        ,systemCode
                        ,moduleCode
                        ,url
                        ,urlRequest
                        ,urlRequestBody
                        ,urlResponse
                        ,resultCode
                        ,userID
                        ,userIP
                        ,requestTime
                        ,responseTime
                        ,timeLen
                        ,createTime
                        ,attackType
                       )
                VALUES (
                         ':id'
                        ,':systemCode'
                        ,':moduleCode'
                        ,':url'
                        ,':urlRequest'
                        ,':urlRequestBody'
                        ,':urlResponse'
                        ,':resultCode'
                        ,':userID'
                        ,':userIP'
                        ,':requestTime'
                        ,':responseTime'
                        ,':timeLen'
                        ,':createTime'
                        ,':attackType'
                       )
                ]]>
            </content>
            
        </sql>
        
        
        
        <sql id="XSQL_Common_OperationLog_Update"> 
        
            <dataSourceGroup ref="DSG_MS_Common" />
            
            <contentDB>
                <safeCheck>false</safeCheck>
            </contentDB>
            
            <content>
                <![CDATA[
                UPDATE  TOperationLog:logName
                   SET  urlResponse    = ':urlResponse'
                       ,resultCode     = ':resultCode'
                       ,responseTime   = ':responseTime'
                       ,timeLen        = ':timeLen'
                 WHERE  id             = ':id'
                ]]>
            </content>
            
        </sql>
        
        
        
        <sql id="XSQL_Common_OperationLog_Query"> 
            
            <dataSourceGroup ref="DSG_MS_Common" />
            
            <content if="ORACLE == this.getDataSourceGroup.getDbProductType">
                <![CDATA[
                SELECT   id
                        ,systemCode
                        ,moduleCode
                        ,url
                        ,urlRequest
                        ,urlRequestBody
                        ,urlResponse
                        ,resultCode
                        ,userID
                        ,userIP
                        ,requestTime
                        ,responseTime
                        ,timeLen
                        ,createTime
                        ,attackType
                  FROM  TOperationLog:logName
                 WHERE  createTime >= SYSDATE - 360
                   AND  userID      = ':userID'          
              <[   AND  userIP      = ':userIP'            ]>
              <[   AND  systemCode  = ':systemCode'        ]>
              <[   AND  moduleCode  = ':moduleCode'        ]>
              <[   AND  url         = ':url'               ]>
              <[   AND  resultCode  = ':resultCode'        ]>
              <[   AND  createTime >= ':createTime'        ]>
              <[   AND  timeLen    >= ':timeLen'           ]>
                 ORDER  BY createTime DESC
                ]]>
            </content>
            
            <content if="MYSQL == this.getDataSourceGroup.getDbProductType">
                <![CDATA[
                SELECT   id
                        ,systemCode
                        ,moduleCode
                        ,url
                        ,urlRequest
                        ,urlRequestBody
                        ,urlResponse
                        ,resultCode
                        ,userID
                        ,userIP
                        ,requestTime
                        ,responseTime
                        ,timeLen
                        ,createTime
                        ,attackType
                  FROM  TOperationLog:logName
                 WHERE  createTime >= DATE_ADD(NOW(), INTERVAL -360 DAY)
                   AND  userID      = ':userID'          
              <[   AND  userIP      = ':userIP'            ]>
              <[   AND  systemCode  = ':systemCode'        ]>
              <[   AND  moduleCode  = ':moduleCode'        ]>
              <[   AND  url         = ':url'               ]>
              <[   AND  resultCode  = ':resultCode'        ]>
              <[   AND  createTime >= ':createTime'        ]>
              <[   AND  timeLen    >= ':timeLen'           ]>
                 ORDER  BY createTime DESC
                ]]>
            </content>
            
            <content if="SQLITE == this.getDataSourceGroup.getDbProductType">
                <![CDATA[
                SELECT   id
                        ,systemCode
                        ,moduleCode
                        ,url
                        ,urlRequest
                        ,urlRequestBody
                        ,urlResponse
                        ,resultCode
                        ,userID
                        ,userIP
                        ,requestTime
                        ,responseTime
                        ,timeLen
                        ,createTime
                        ,attackType
                  FROM  TOperationLog:logName
                 WHERE  createTime >= DATETIME('now' ,'-360 day')
                   AND  userID      = ':userID'          
              <[   AND  userIP      = ':userIP'            ]>
              <[   AND  systemCode  = ':systemCode'        ]>
              <[   AND  moduleCode  = ':moduleCode'        ]>
              <[   AND  url         = ':url'               ]>
              <[   AND  resultCode  = ':resultCode'        ]>
              <[   AND  createTime >= ':createTime'        ]>
              <[   AND  timeLen    >= ':timeLen'           ]>
                 ORDER  BY createTime DESC
                ]]>
            </content>
            
            <result>
                <row>org.hy.microservice.common.operationLog.OperationLog</row>
                <cfill>setter(colValue)</cfill>
            </result>
            
        </sql>
        
        
        
        <sql id="XSQL_Common_OperationLog_Query_ByPage"> 
            
            <dataSourceGroup ref="DSG_MS_Common" />
            
            <content ref="XSQL_Common_OperationLog_Query.getContent" />
            <result  ref="XSQL_Common_OperationLog_Query.getResult"/>
            <comment>分页查询</comment>
            
        </sql>
        
        
        
        <sql id="XSQL_Common_OperationLog_Query_Count"> 
            
            <dataSourceGroup ref="DSG_MS_Common" />
            
            <content>
                <![CDATA[
                SELECT  COUNT(1) AS totalCount
                  FROM  TOperationLog:logName
                 WHERE  userID      = ':userID'          
              <[   AND  userIP      = ':userIP'            ]>
              <[   AND  systemCode  = ':systemCode'        ]>
              <[   AND  moduleCode  = ':moduleCode'        ]>
              <[   AND  url         = ':url'               ]>
              <[   AND  resultCode  = ':resultCode'        ]>
              <[   AND  createTime >= ':createTime'        ]>
              <[   AND  timeLen    >= ':timeLen'           ]>
                ]]>
            </content>
            
        </sql>
        
    </sqls>
    
</config>